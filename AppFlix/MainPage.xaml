<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppFlix.MainPage" Background="#6C287D">

    <StackLayout >


        <Image x:Name="logo" HeightRequest="80" />

        <ScrollView>

            <Grid>


                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>

                </Grid.ColumnDefinitions>


                <Grid.RowDefinitions>

                    <RowDefinition Height="10"/>
                    <RowDefinition Height="150"/>

                </Grid.RowDefinitions>




                <Label Text="Quem vai assistir?" FontAttributes="Bold"  VerticalOptions="CenterAndExpand" Grid.Column="1" Grid.Row="1"   Style="{StaticResource Titulo}" />


                <ImageButton  x:Name="Escolha1" Clicked="Escolha1_Clicked"   Grid.Column="1" Grid.Row="2"  />

                <ImageButton  x:Name="Escolha2" Clicked="Escolha2_Clicked"   Grid.Column="2" Grid.Row="2"  BorderColor="Transparent"/>


            </Grid>
        </ScrollView>
    </StackLayout>

</ContentPage>